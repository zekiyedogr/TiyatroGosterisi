@using TiyatroGosterisi.Models.Entity
@model List<Tur>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
    <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 50px;
        color: #2c3e50;        
    }

    .table-bordered th, .table-bordered td {
        border: .125rem solid #2c3e50;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #2c3e50;
        color: #ffffff;
    }

    .btn0 {
        color: #ca0f0f;
        text-decoration: none;
        padding: 7px;
    }

    .btn0:hover {
        text-decoration: none;
        color: #ca0f0f;
    }

    .btn1 {
        color: #358f40;
        text-decoration: none;
        padding: 7px;
    }

        .btn1:hover, btn:hover {
            text-decoration: none;
        }

    .btn2 {
        background-color: #1abc9c;
        border-color: #2c3e50;
        color: #ffffff;
        padding: 10px;
        border-radius: 5px;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        vertical-align: middle;
    }

        .btn2:hover {
            background-color: #2c3e50;
            text-decoration: none;
            color: #ffffff;
        }
    </style>


<h2 style="text-align: center; margin-bottom: 20px; margin-top: 50px">TÜRLER</h2>
<table class="table table-bordered">
    <tr>
        <th>Tür Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var tur in Model)
     {
        <tr>
            <td>@tur.TurAdi</td>
            <td><a href="/Tur/TurSil/@tur.TurId" class="btn0">Sil</a></td>
            <td><a href="/Tur/TurGetir/@tur.TurId" class="btn1">Güncelle</a></td>
        </tr>
     }
</table>
<a href="/Tur/TurEkle/" class="btn2">Yeni Bir Tür Ekle</a>