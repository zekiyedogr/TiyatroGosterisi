@model TiyatroGosterisi.Models.Entity.Uye

<!DOCTYPE html>
<html>
<head>
    <title>Tiyatro | Giriş Yap</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <style>
        button {
            background: #1abc9c;
            color: #ffffff;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: none;
            padding: 12px 60px;
            cursor: pointer;
            width: 100%;
            border-radius: 6px;
        }

        .group i {
            color: #9a0016;
            font-size: 20px;
            padding: 0 10px;
        }

        h2 {
            margin: 0;
            color: #ffffff;
            font-size: 25px;
            font-weight: bold;
            text-align: center;
            letter-spacing: 1px;
            padding-bottom: 30px;
        }

        .register {
            color: #1abc9c;
            text-decoration: none;
        }

        .w3l-login-form {
            background: rgba(0, 0, 0, 0.4117647058823529);
            max-width: 500px;
            margin: 0 auto;
            padding: 6em;
            border-radius: 10px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <div class="w3l-login-form" style="top: 20px">
        <h2>Giriş Yap</h2>
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
         {
            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Mail" required="required" name="UyeMail" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Parola:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Parola" required="required" name="UyeParola" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Parolanızını mı unuttunuz?</a>
                <p><input type="checkbox"> Hatırla</p>
            </div>
            <button type="submit">Giriş</button>
         }
        <p class=" w3l-register-p">Hesabınız yok mu?<a href="/KayitOl/Kayit/" class="register"> Kayıt ol</a></p>
    </div>
</body>
</html>