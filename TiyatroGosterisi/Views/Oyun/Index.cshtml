@using TiyatroGosterisi.Models.Entity
@model List<Oyun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 50px;
        color: #2c3e50;
    }

    .table-bordered th, .table-bordered td {
        border: .125rem solid #2c3e50;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #2c3e50;
        color: #ffffff;
    }

    .btn0 {
        color: #ca0f0f;
        text-decoration: none;
        padding: 7px;
    }

        .btn0:hover {
            text-decoration: none;
            color: #ca0f0f;
        }

    .btn1 {
        color: #358f40;
        text-decoration: none;
        padding: 7px;
    }

        .btn1:hover, btn:hover {
            text-decoration: none;
        }

    .btn2 {
        background-color: #1abc9c;
        border-color: #2c3e50;
        color: #ffffff;
        padding: 10px;
        border-radius: 5px;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        vertical-align: middle;
    }

        .btn2:hover {
            background-color: #2c3e50;
            text-decoration: none;
            color: #ffffff;
        }

    #p {
        border: 1px solid #2c3e50;
        border-radius: 4px;
        padding: 3px 7px;
        height: 36px;
        margin-right: 5px;
    }

    .ara {
        background-color: #1abc9c;
        color: #ffffff;
        padding: 7px;
        border: 1px solid #2c3e50;
        border-radius: 4px;
    }


    .new-users {
        width: 23.5%;
        background: #1abc9c;;
        padding: 1.8em 03.5em;
        float: left;
        margin-right: 2%;
        margin-top: 50px;
        margin-bottom: 50px;
        cursor: pointer;
        color: #fff;
        text-align: center;
        font-size: 2.6em;
        font-weight: 500;
        letter-spacing: 1px;
        float: right;
        font-size: 1.3em;
        font-weight: 300;
    }


    .icon {
        float: left;
        margin-right: 5%;
    }

    .icon-text {
        float: left;
    }

    .clearfix:before, .clearfix:after {
        display: table;
        content: " ";
    }
</style>


<div class="new-users">
    <div class="icon">
        <i class="user1"></i>
    </div>
    <div class="icon-text">
        <h3>@ViewBag.dgr1</h3>
        <p>Toplam Oyun</p>
    </div>
    <div class="clearfix"></div>
</div>

<br />
<br />

<h2 style="text-align: center; margin-bottom: 20px; margin-top: 50px">OYUNLAR</h2>
@using (Html.BeginForm("Index", "Oyun", FormMethod.Get))
{
    <div style="margin-bottom: 15px; margin-top: 15px">
        @Html.TextBox("p")
        <input class="ara" type="submit" value="Oyun Ara" />
    </div>
}
<table class="table table-bordered">
    <tr>
        <th>Oyun Adı</th>
        <th>Yönetmeni</th>
        <th>Yazarı</th>
        <th>Türü</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var oyun in Model)
    {
        <tr>
            <td>@oyun.OyunAdi</td>
            <td>@oyun.Yonetmen.YonetmenAdi</td>
            <td>@oyun.Yazar.YazarAdi</td>
            <td>@oyun.Tur.TurAdi</td>
            <td>@Html.ActionLink("Sil", "OyunSil", new { id = oyun.OyunId }, new { @class = "btn0", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
            <td><a href="/Oyun/OyunGetir/@oyun.OyunId" class="btn1">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Oyun/OyunEkle/" class="btn2">Yeni Bir Oyun Ekle</a>