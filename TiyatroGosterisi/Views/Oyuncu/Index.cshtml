@using TiyatroGosterisi.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Oyuncu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 50px;
        color: #2c3e50;
    }

    .table-bordered th, .table-bordered td {
        border: .125rem solid #2c3e50;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #2c3e50;
        color: #ffffff;
    }

    .btn0 {
        color: #ca0f0f;
        text-decoration: none;
        padding: 7px;
    }

    .btn1 {
        color: #358f40;
        text-decoration: none;
        padding: 7px;
    }

        .btn1:hover, btn:hover {
            text-decoration: none;
        }

    .btn2 {
        background-color: #1abc9c;
        border-color: #2c3e50;
        color: #ffffff;
        padding: 10px;
        border-radius: 5px;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        vertical-align: middle;
    }

        .btn2:hover {
            background-color: #2c3e50;
            text-decoration: none;
            color: #ffffff;
        }

    .pagination > li > a, .pagination > li > span {
        background-color: #1abc9c;
        color: #ffffff;
        border: 1px solid #2c3e50;
        padding: 5px;
        border-radius: 5px;
        margin-left: 2px;
    }

        .pagination > li > a:hover, .pagination > li > span:hover {
            background-color: #2c3e50;
            color: #ffffff;
            border: 1px solid #2c3e50;
            height: 35px;
            width: 35px;
            text-decoration: none;
        }

    .pagination > .active > a {
        background-color: #2c3e50;
        color: #ffffff;
        border: 1px solid #2c3e50;
        height: 35px;
        width: 35px;
    }

        .pagination > .active > a:hover {
            background-color: #2c3e50;
            color: #ffffff;
            border: 1px solid #2c3e50;
            height: 35px;
            width: 35px;
        }


    .new-users {
        width: 23.5%;
        background: #1abc9c;
        ;
        padding: 1.8em 03.5em;
        float: left;
        margin-right: 2%;
        margin-top: 50px;
        margin-bottom: 50px;
        cursor: pointer;
        color: #fff;
        text-align: center;
        font-size: 2.6em;
        font-weight: 500;
        letter-spacing: 1px;
        float: right;
        font-size: 1.3em;
        font-weight: 300;
    }


    .icon {
        float: left;
        margin-right: 5%;
    }

    .icon-text {
        float: left;
    }

    .clearfix:before, .clearfix:after {
        display: table;
        content: " ";
    }
</style>


<div class="new-users">
    <div class="icon">
        <i class="user1"></i>
    </div>
    <div class="icon-text">
        <h3>@ViewBag.dgr1</h3>
        <p>Toplam Oyuncu</p>
    </div>
    <div class="clearfix"></div>
</div>
<br />
<br />
<br />
<br />
<br />
<h2 style="color: #2c3e50; text-align: center; margin-bottom: 20px; margin-top: 50px">OYUNCULAR</h2>
<table class="table table-bordered">
    <tr>
        <th>Oyuncu Adı</th>
        <th>Oyun Adı</th>
        <th>Rol</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var oyuncu in Model)
    {
        <tr>
            <td>@oyuncu.OyuncuAdi</td>
            <td>@oyuncu.Oyun.OyunAdi</td>
            <td>@oyuncu.Rol</td>
            <td>@Html.ActionLink("Sil", "OyuncuSil", new { id = oyuncu.OyuncuId }, new { @class = "btn0", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
            <td><a href="/Oyuncu/OyuncuGetir/@oyuncu.OyuncuId" class="btn1">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Oyuncu/OyuncuEkle/" class="btn2">Yeni Bir Oyuncu Ekle</a>